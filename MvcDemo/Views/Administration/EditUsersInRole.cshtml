@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "Edit Users In Role";
    var roleId = ViewBag.roleId;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="card mt-5">
              <div class="card-header">Edit Users In Role</div>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-btn-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input">
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            @Model[i].UserName
                        </label>
                    </div>
                }

              <div class="card-body">
                <input type="submit" asp-route-roleId="@roleId" class="btn btn-primary mt-2" value="Update" />
                <a asp-action="ListRoles" class="btn btn-danger mt-2">Cancel</a>
              </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
